#include <iostream>
#include <string>
using namespace std;

template <class T>
struct Node{
	T data;
	Node<T>* next;
	Node():next(NULL) { }
	Node(T a, Node<T>* lnext):data(a), next(lnext) { }
};

template <class T>
class List{
//  顺序表 
